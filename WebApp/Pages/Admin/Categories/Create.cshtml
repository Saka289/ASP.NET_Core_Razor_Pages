@page
@model WebApp.Pages.Admin.Categories.CreateModel


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pl-3">
            <h2 class="text-primary pl-3">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <Button type="submit" class="btn btn-primary" style="width:150px">Create</Button>
        <a asp-page="Index" class="btn btn-primary">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}